                            </ul>
                            <div class="feat-optz">
                                <span class="text-capitalize">restaurant</span>
                                <h2 class="text-capitalize"><a asp-controller="Restaurants" asp-action="Details" asp-route-id="@item.Id" title="">@item.Name</a></h2>
                            </div>
                        </div>
                    </div>
                  }
            </div>

        </div>
        <div class="row text-center">
            <div class="col-12">
                <a asp-area="" asp-controller="Restaurants" asp-action="Index" class="btn-default">View all list <span></span></a>
            </div>
        </div>
    </div>
        <!--featured-sec end-->
</section>
<!--featured-section end-->
