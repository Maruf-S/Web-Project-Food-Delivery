<section class="sec-block">
    <div class="container-fluid">
        <div class="section-title text-center">
            <span>Amazing taste </span>
            <h2 class="text-capitalize">Popular dishes</h2>
        </div>
        <!--sec-title end-->
        <div class="popular-dishes text-center">
            <!--options end-->
            <div class="row">
                <div class="masonary">
                    @foreach (Food item in ViewBag.FFood)
                    {
                        <div class="col-lg-3 col-md-6 col-sm-6 meat">
                            <div class="pd-item">
                                <div class="pd-thumbnail">
                                    <img src="~/Images/Foods/@item.ImagePath" alt="" class="w-100">
                                </div>
                                <h3 class="semi-bold text-capitalize">@item.Name</h3>
                                <p>Presented by: @item.Resturant.Name</p>
                                <strong class="semi-bold">@item.Price ETB</strong>
                                <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id " title="" class="btn-default gradient-bg half-radius height-2">Add to cart <span></span></a>
                            </div>
                        </div>
                    }
                </div>
                <!--masonary end-->
            </div>
        </div>
        <!--popular-dishes end-->
    </div>
</section>



