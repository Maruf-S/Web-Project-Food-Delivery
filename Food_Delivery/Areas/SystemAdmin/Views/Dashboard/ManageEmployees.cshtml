@model IEnumerable<Food_Delivery.Models.ApplicationUser>

@{
    ViewData["Title"] = "ManageEmployees";
}

@section PageCss{
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/datatables-buttons/css/buttons.bootstrap4.min.css">
    <style>
        .avatarImg {
            width: 30px;
            height: 30px;
            border-radius: 50%;
        }
    </style>
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-info">Manage Employees</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Employees</a></li>
                    <li class="breadcrumb-item active">Manage Employees</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-muted">Employees List</h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="DTable" class="table table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th> </th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @if (@item.ImagePath != null)
                                        {

                                            <img src="~/Images/Employees/@item.ImagePath" class="avatarImg elevation-2" alt="User Image"> }
                                        else
                                        {
                                            <img src="~/Images/placeholderimage.png" class="avatarImg elevation-2" alt="User Image">}
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        <a asp-action="GetCVDoc" asp-route-id="@item.Id" class="btn text-success" data-toggle="tooltip" data-placement="top" title="Download CV"><i class="fas fa-download"></i></a>
                                        <a asp-action="EmployeeUpsert" asp-route-id="@item.Id" class="btn text-success" data-toggle="tooltip" data-placement="top" title="Edit Employee"><i class="fas fa-user-edit"></i></a>
                                    </td>
                                </tr>
                                        }
                                </tbody>
                            <tfoot>
                                <tr>
                                    <th> </th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
