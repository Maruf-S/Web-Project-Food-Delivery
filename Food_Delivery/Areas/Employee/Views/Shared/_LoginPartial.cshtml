@using Microsoft.AspNetCore.Identity
@using Food_Delivery.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{var returnUrl = @Context.Request.Path; }
    @if (SignInManager.IsSignedIn(User))
    {
    @*<li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>*@
    @if (@UserManager.FindByNameAsync(User.Identity.Name).Result.ImagePath != null)
    {

        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/Images/Employees/@UserManager.FindByNameAsync(User.Identity.Name).Result.ImagePath" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="d-block">@UserManager.FindByNameAsync(User.Identity.Name).Result.FirstName @UserManager.FindByNameAsync(User.Identity.Name).Result.LastName</a>
            </div>
        </div>
    }
    else
    {
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/Images/placeholderimage.png" class="img-circle elevation-2" alt="User Image">
            </div>

            <div class="info">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="d-block">@UserManager.FindByNameAsync(User.Identity.Name).Result.FirstName @UserManager.FindByNameAsync(User.Identity.Name).Result.LastName</a>
            </div>
        </div>
    }
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Employee" asp-controller="Dashboard"  asp-action="Login" asp-route-returnUrl="@returnUrl">
            <i class="nav-icon fas fa-sign-in-alt"></i>
            <p>
                Login
            </p>
        </a>
    </li>
}
