@model IEnumerable<Food_Delivery.Models.Restaurant>

@{
    ViewData["Title"] = "ManageRestaurants";
}

@section PageCss{
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/datatables-buttons/css/buttons.bootstrap4.min.css">
    <style>
        .avatarImg {
            width: 30px;
            height: 30px;
            border-radius: 50%;
        }
    </style>
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-info">Manage Restaurants</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Restaurants</a></li>
                    <li class="breadcrumb-item active">Manage Restaurants</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-muted">Restaurants List</h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="DTable" class="table table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th> </th>
                                    <th>Restaurant Name</th>
                                    <th>Restaurant Adress</th>
                                    <th>Date Added</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (@item.ImagePath != null)
                                            {

                                                <img src="~/Images/Restaurants/@item.ImagePath" class="avatarImg elevation-2" alt="User Image"> }
                                            else
                                            {
                                                <img src="~/Images/RestaurantPlaceholderpng.png" class="avatarImg elevation-2" alt="User Image">}
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @item.DateAdded.ToString("MM/dd/yyyy")
                                        </td>
                                        <td>
                                            @*<a asp-action="GetCVDoc" asp-route-id="@item.Id" class="btn text-success" data-toggle="tooltip" data-placement="top" title="Download CV"><i class="fas fa-download"></i></a>*@
                                            <a asp-action="RestaurantUpsert" asp-route-id="@item.Id" class="btn text-success" data-toggle="tooltip" data-placement="top" title="Edit Restaurant"><i class="fas fa-user-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th> </th>
                                    <th>Restaurant Name</th>
                                    <th>Restaurant Adress</th>
                                    <th>Date Added</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts {
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/lib/jszip/jszip.min.js"></script>
    <script src="~/lib/pdfmake/pdfmake.min.js"></script>
    <script src="~/lib/pdfmake/vfs_fonts.js"></script>
    <script src="~/lib/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/lib/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/lib/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script>
        $(function () {
            $("#DTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
